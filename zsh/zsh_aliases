# Safer / nicer defaults
alias ll='ls -lah'
alias la='ls -A'
alias ..='cd ..'
alias ...='cd ../..'

# Git
alias g='git'
alias gs='git status'
alias gl='git log --oneline --decorate --graph -n 25'
alias gd='git diff'
alias gds='git diff --staged'
alias gc='git commit'
alias gca='git commit --amend'
alias gp='git push'
alias gpo='git push -u origin HEAD'
alias ga='git add'
alias gaa='git add -A'
alias grh='git reset --hard'

# Tmux
alias tm='tmux'
alias tma='tmux attach -t'
alias tml='tmux ls'

# Brew
alias brewu='brew update && brew upgrade && brew cleanup'

# asdf
alias asdfu='asdf plugin update --all'

# Quick edits
alias zshrc='$EDITOR ~/.zshrc'
alias dots='cd ~/dotfiles'
